<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="5dp"
        tools:layout_editor_absoluteX="5dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/filmNameDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:text="FilmName" />

                <TextView
                    android:id="@+id/filmCategorieDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textColor="@android:color/primary_text_light"
                    android:layout_alignStart="@+id/filmNameDetails"
                    android:layout_below="@+id/filmNameDetails"
                    android:textSize="18sp"
                    android:text="Categorie" />

                <TextView
                    android:id="@+id/filmRealisateurDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@android:color/primary_text_light"
                    android:layout_alignStart="@+id/filmCategorieDetails"
                    android:layout_below="@+id/filmCategorieDetails"
                    android:textSize="18sp"
                    android:text="Realisateur" />

                <TextView
                    android:id="@+id/filmDateDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textColor="@android:color/primary_text_light"
                    android:layout_toEndOf="@+id/filmRealisateurDetails"
                    android:layout_below="@+id/filmCategorieDetails"
                    android:textSize="18sp"
                    android:text="Date" />

                <TextView
                    android:id="@+id/filmDureeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@id/filmDateDetails"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="15sp"
                    android:text="Duree :" />
                <TextView
                    android:id="@+id/filmDureeDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/filmDateDetails"
                    android:layout_toRightOf="@id/filmDureeTitle"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="15sp"
                    android:text="Duree" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:layout_below="@id/filmDateDetails"
                    android:layout_toEndOf="@id/filmDureeDetails"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="15sp"
                    android:text=" m" />

                <TextView
                    android:id="@+id/filmBudgetTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@id/filmDureeDetails"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="15sp"
                    android:text="Budget :" />
                <TextView
                    android:id="@+id/filmBudgetDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/filmDureeDetails"
                    android:layout_toRightOf="@id/filmBudgetTitle"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="15sp"
                    android:text="Budget" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:layout_below="@id/filmDureeDetails"
                    android:layout_toEndOf="@id/filmBudgetDetails"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="15sp"
                    android:text=" $" />

                <TextView
                    android:id="@+id/filmRecetteTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@id/filmBudgetDetails"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="15sp"
                    android:text="Recette :" />
                <TextView
                    android:id="@+id/filmRecetteDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/filmBudgetDetails"
                    android:layout_toRightOf="@id/filmRecetteTitle"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="15sp"
                    android:text="Recette" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:layout_below="@id/filmBudgetDetails"
                    android:layout_toEndOf="@id/filmRecetteDetails"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="15sp"
                    android:text=" $" />



            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>